mixin product-item(title,descr,img)
	+b.ARTICLE.catalog-item(href="#")&attributes(attributes)
		+e.title!= title
		+e.descr.d-none.d-md-block!= descr
		+e.img-wrap
			+img(`img/catalog-${img}.png`)
	// /.product-item

mixin sCatalog(data)
	// start sCatalog
	+b.sCatalog.section&attributes(attributes)
		
		+e.buttons-wrap
			.container
				+e.buttons-row.swiper.sm-swiper-js
					.swiper-wrapper
						.swiper-slide
							+e.btn.active(href="#") Все направления 
						.swiper-slide
							+e.btn(href="#") Герниопластика (лечение грыж) 
						.swiper-slide
							+e.btn(href="#") Урология
						.swiper-slide
							+e.btn(href="#") Гинекология
						.swiper-slide
							+e.btn(href="#") Офтальмология
						.swiper-slide
							+e.btn(href="#") Ветеринария
		if block
			block
		else
			+e.slider-wrap
				//- .section-with-ball
				.container
					+e.slider-wrap
						+e.slider--js.swiper
							.swiper-wrapper
								.swiper-slide
									+product-item('ПГА рапид','Нити полигликолидные, плетеные, с покрытием','1')(style="--gradient:linear-gradient(90deg, #DC5672 0.02%, rgba(220, 86, 114, 0.26) 100%)")
								.swiper-slide
									+product-item('Пелвикс передний','Нити полигликолидные, плетеные, с покрытием и в лигатурном исполнении, полимерные сетчатые эндопротезы, хирургические инструменты','2')(style="--gradient:linear-gradient(90deg, #DC5672 0.02%, rgba(220, 86, 114, 0.26) 100%)")
								.swiper-slide
									+product-item('Ультрасорб','Нити полигликолидные, плетеные, с покрытием','3')(style="--gradient:linear-gradient(90deg, #CCA5C9 0.02%, rgba(204, 165, 201, 0.26) 100%);")
								.swiper-slide
									+product-item('ПГА рапид','Нити полигликолидные, плетеные, с покрытием','1')(style="--gradient:linear-gradient(90deg, #D27219 0%, rgba(210, 114, 25, 0.26) 100%)")
								.swiper-slide
									+product-item('Пелвикс передний','Нити полигликолидные, плетеные, с покрытием и в лигатурном исполнении, полимерные сетчатые эндопротезы, хирургические инструменты','2')(style="--gradient:linear-gradient(90deg, #A3428F 0%, rgba(163, 66, 143, 0.26) 100%)")
								.swiper-slide
									+product-item('Ультрасорб','Нити полигликолидные, плетеные, с покрытием','3')(style="--gradient:linear-gradient(90deg, #2B74B7 0%, rgba(43, 116, 183, 0.26) 100%)")
						+arrow
			+e.category-wrap 

					+e.category-list.UL.container
						mixin catRow(img,title, descr)
							+e.row.row.LI
								+e.cat-img.col-12.col-sm-6
									+e.cat-img-wrap
										+pic(`img/category-${img}.png`)
								.col-12.col-sm-6
									+e.cat-text
										h2= title
										+e.cat-descr= descr
										+e.link(href="#") Перейти в категорию
											+icon('circle-arrow')
						+catRow('1','Рассасывающиеся ХШМ', 'Нити хирургические с иглами атравматическими и нити хирургические в отрезках, стерильные')
						+catRow('2','Нерассасывающиеся ХШМ', 'Многоразовые инструменты для установки сетчатых эндопротезов')
						+catRow('3','Специальные ХШМ', 'Раневые покрытия – это специальные материалы, которые защищают рану от микроорганизмов.')
						+catRow('4','Эндопротезы для восстановительной хирургии', 'Хирургические сетки для лечения грыж и выпадения женских половых органов.')
						+catRow('5','Эндопротезы для урогинекологии', 'Новейшее противоспаечное средство МЕЗОГЕЛЬ® для профилактики и лечения спаечного процесса в хирургии.')
	// end sCatalog

