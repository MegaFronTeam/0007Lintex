mixin newsItem(img,cat,title,date="27 июня 2023")
	.col-6&attributes(attributes)
		+e.img-wrap
			+pic(`img/${img}`)
		+e.category= cat
		+e.title= title
		+e.date= date
mixin sNews(data)
	// start sNews
	+b.SECTION.sNews.section#sNews&attributes(attributes)
		.container
			if block
				block
			else
				//- +b.section-title
				//- 	h1 Новости
				+e.slider.swiper.breadcrumb-slider--js
					.swiper-wrapper
						+e.slide.swiper-slide
							+e.btn.active(href="#") Все новости
						+e.slide.swiper-slide
							+e.btn(href="#") Публикации в проессе
						+e.slide.swiper-slide
							+e.btn(href="#") Научная деятельность
						+e.slide.swiper-slide
							+e.btn(href="#") Новости компании
				+e.row.row
					+newsItem('news-1.jpg','Новости компании','Лечение пролапса тазовых органов')(data-aos="fade-up" data-aos-duration="700" data-aos-delay="150")
					+newsItem('news-2.jpg','Научная деятельность','Сетчатые эндопротезы, используемые в хирургии недержания мочи')(data-aos="fade-up" data-aos-duration="900" data-aos-delay="250")
