extends ../layout/main.pug
 
include ../blocks/sMainSlider/_sMainSlider.pug


include ../blocks/footer/_footer.pug

block variables
	- let  mainPage= 'start-page main-page with-fix-nav' 
	- let  bg= null

block title
	- let  title= index.head.title
	title= title
block pagecontent
	//- +mob-mnu()
	//- +bgCircles()
	picture.picture-bg
		source(srcset="img/start-page-bg.webp")
		img(src="img/start-page-bg.png", alt="").object-fit-js
	.preloader.bg-wrap
		picture.picture-bg
			source(srcset="img/preloader-bg.png" media="(min-width:576px)")
			img(src="img/preloader-bg-mobile.png", alt="").object-fit-js
		//- video(playsinline autoplay muted loop).picture-bg
		//- 	source(src= '/video/preloader.webm') 
	main
		include ../blocks/header/_header.pug
		include ../blocks/topLine/_topLine.pug
		include ../blocks/top-nav/_top-nav.pug 
		+header()
			+topLine
			+top-nav()
		
		+sMainSlider
	//- +footer
	//- +parts('footer')
block scripts
	script(src=`js/slider.js`)